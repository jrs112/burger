<div class="container">
  <div class="row">
    <div class="col-md-12 text-center" id="top-bar">
      <h1>Eat Da Burger!</h1>
    </div>
    <div class="col-md-6 text-center task">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
        <div class="col-md-9 text-center">
          <h3>{{this.id}}. {{this.burger_name}}</h3>
        </div>
      <div class="col-md-3 text-center">
        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
          <input type="hidden" name="burger_id" type="text" value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-default">Devour It!</button>
        </form>
      </div>
      {{/unless}}
      {{/each}}
      </div>
    </div>

    <div class="col-md-6 text-center task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_dname}}" readonly>
        {{/if}}
      {{/each}}
      </div>
  </div>
</div>
